local RunService = game:GetService("RunService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Events = ReplicatedStorage:WaitForChild("Events")

--// GUI Creation
local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local UICorner = Instance.new("UICorner")
local UIStroke = Instance.new("UIStroke")
local Title = Instance.new("TextLabel")
local RebirthToggle = Instance.new("TextButton")
local FastEatToggle = Instance.new("TextButton")
local DestroyBtn = Instance.new("TextButton")

ScreenGui.Name = "AJ_Auto_Hub"
ScreenGui.Parent = game:GetService("CoreGui")
ScreenGui.ResetOnSpawn = false

-- Main Frame (Adjusted for 2 main toggles)
MainFrame.Name = "MainFrame"
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
MainFrame.Position = UDim2.new(0.5, -80, 0.5, -70)
MainFrame.Size = UDim2.new(0, 160, 0, 145)
MainFrame.Active = true
MainFrame.Draggable = true

UICorner.CornerRadius = UDim.new(0, 10)
UICorner.Parent = MainFrame

UIStroke.Thickness = 2
UIStroke.Parent = MainFrame

-- Rainbow Animation
task.spawn(function()
    while RunService.RenderStepped:Wait() do
        local hue = tick() % 5 / 5
        UIStroke.Color = Color3.fromHSV(hue, 1, 1)
    end
end)

-- Title
Title.Parent = MainFrame
Title.BackgroundTransparency = 1
Title.Size = UDim2.new(1, 0, 0, 30)
Title.Text = "Instagram: 4jayyz"
Title.TextColor3 = Color3.new(1, 1, 1)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 13

-- (1) Auto Rebirth Toggle
local rebirthEnabled = false
RebirthToggle.Parent = MainFrame
RebirthToggle.Text = "Auto Rebirth: OFF"
RebirthToggle.Size = UDim2.new(0.9, 0, 0, 30)
RebirthToggle.Position = UDim2.new(0.05, 0, 0.25, 0)
RebirthToggle.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
RebirthToggle.TextColor3 = Color3.new(1, 1, 1)
RebirthToggle.Font = Enum.Font.GothamBold
RebirthToggle.TextSize = 11
Instance.new("UICorner", RebirthToggle)

task.spawn(function()
    while task.wait(0.5) do -- Anti-lag delay
        if rebirthEnabled then
            Events:WaitForChild("Rebirth"):FireServer()
        end
    end
end)

RebirthToggle.MouseButton1Click:Connect(function()
    rebirthEnabled = not rebirthEnabled
    RebirthToggle.Text = "Auto Rebirth: " .. (rebirthEnabled and "ON" or "OFF")
    RebirthToggle.BackgroundColor3 = rebirthEnabled and Color3.fromRGB(0, 150, 0) or Color3.fromRGB(30, 30, 30)
end)

-- (2) Fast Eat Toggle (Special Logic)
local fastEatEnabled = false
FastEatToggle.Parent = MainFrame
FastEatToggle.Text = "Fast Eat: OFF"
FastEatToggle.Size = UDim2.new(0.9, 0, 0, 30)
FastEatToggle.Position = UDim2.new(0.05, 0, 0.5, 0)
FastEatToggle.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
FastEatToggle.TextColor3 = Color3.new(1, 1, 1)
FastEatToggle.Font = Enum.Font.GothamBold
FastEatToggle.TextSize = 11
Instance.new("UICorner", FastEatToggle)

FastEatToggle.MouseButton1Click:Connect(function()
    fastEatEnabled = not fastEatEnabled
    FastEatToggle.Text = "Fast Eat: " .. (fastEatEnabled and "ON" or "OFF")
    FastEatToggle.BackgroundColor3 = fastEatEnabled and Color3.fromRGB(0, 150, 0) or Color3.fromRGB(30, 30, 30)
    
    if fastEatEnabled then
        -- Step 1: Pehle Slow Eat off karein
        Events:WaitForChild("AutoOff"):FireServer()
        task.wait(0.1)
        -- Step 2: Phir Fast Eat on karein
        Events:WaitForChild("AutoEatFastOn"):FireServer()
    else
        -- Jab user off kare toh normal state pe laane ke liye dobara fire kar sakte hain
        Events:WaitForChild("AutoEatFastOff"):FireServer()
    end
end)

-- (3) Destroy UI
DestroyBtn.Parent = MainFrame
DestroyBtn.Text = "Destroy UI"
DestroyBtn.Size = UDim2.new(0.9, 0, 0, 25)
DestroyBtn.Position = UDim2.new(0.05, 0, 0.78, 0)
DestroyBtn.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
DestroyBtn.TextColor3 = Color3.new(1, 1, 1)
DestroyBtn.Font = Enum.Font.GothamBold
DestroyBtn.TextSize = 11
Instance.new("UICorner", DestroyBtn)

DestroyBtn.MouseButton1Click:Connect(function()
    rebirthEnabled = false
    fastEatEnabled = false
    ScreenGui:Destroy()
end)
